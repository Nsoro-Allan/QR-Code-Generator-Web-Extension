{
  "manifest_version": 3,
  "name": "AC - QR Code Generator",
  "version": "1.0",
  "description": "Generate and download QR codes from text or URLs",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["downloads"]
}